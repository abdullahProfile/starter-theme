<style>

  .image-with-text__container {
      width: 100%;
      max-width: 1440px;
      display: flex;
      flex-direction: {{ section.settings.flex-direction }};
      align-items:{{ section.settings.align-item }};
      justify-content: {{ section.settings.flex-justify }};
      gap: {{ section.settings.content-gap }}px;
  }

  .text__image {
    width:100%;
    max-width: 38.125rem;
    overflow: hidden;

    img {
      width: 100%;
      object-fit: {{ section.settings.object-fit }};
    }
  }

  .text__title {
    font-size: {{ section.settings.title-font-size }}rem;
    font-weight: {{ section.settings.title-font-weight }};
    margin-bottom: 16px;
  }

  .text {
    max-width: 32.5rem;
  }

  @media (max-width:48.625rem) {

    .image-with-text__container {
      max-width: 100%;
      flex-direction: {{ section.settings.flex-direction__mbl}};
    }

    .text__image {
      max-width: 100%;
    }

    .text {
      max-width: 100%;
    }

  }
</style>
<section class="image-with-text">
  <div class="image-with-text__container">

    <div class="text">
      <h3 class="text__title">{{ section.settings.title }}</h3>
      <p>{{ section.settings.description }}</p>
    </div>

    <div class="text__image">
      <img src="{{ section.settings.text-image | image_url: width: 610 }}" alt="{{ product.title }}" />
    </div>

    {% if section.blocks.size > 0 %}
      <div class="text__blocks">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'text_block' %}
              <div class="block block--text">
                <p>{{ block.settings.block_text }}</p>
              </div>

            {% when 'image_block' %}
              <div class="block block--image">
                <img src="{{ block.settings.block_image | image_url: 'medium' }}" alt="">
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}

  </div>
</section>


{% schema %}
{
 "name": "image with text",
 "settings": [

  {
    "type": "image_picker",
    "label": "image",
    "id": "text-image",
  },

  {
    "type": "select",
    "label": "image fit",
    "id": "object-fit",

    "options": [
      {"value": "none", "label": "none"},
      {"value": "cover", "label": "cover"},
      {"value": "contian", "label": "contian"},
      {"value": "fill", "label": "fill"},
      {"value": "scale-down", "label": "scale down"}
    ]
  },

  {
    "type": "text",
    "label": "title",
    "id": "title",
    "default":"hello i am image with text heading"
  },

  {
    "type": "range",
    "label": "title font size",
    "id": "title-font-size",
    "min": 1,
    "max": 4,
    "step": 1,
    "default": 1,
    "unit": "rem"
  },

  {
    "type": "select",
    "label": "title font weight",
    "id": "title-font-weight",

    "options": [
      {"value": "bold", "label": "bold"},
      {"value": "regular", "label": "regular"},
      {"value": "extra-bold", "label": "extra-bold"},
      {"value": "medium", "label": "medium"}
    ]
  },

  {
    "type": "text",
    "label": "Description",
    "id": "description",
    "default": "Hello i am description of this section"
  },

  {
    "type": "select",
    "label": "font weight",
    "id": "text-weight",
    "options": [
      {"value": "600", "label": "Regular"},
      {"value": "800", "label": "Medium"},
      {"value": "900", "label": "large"},
    ]
  },

  {
    "type": "select",
    "label": "flex Direction",
    "id": "flex-direction",

    "options": [
      {"value": "row", "label": "row"},
      {"value": "column", "label": "column"},
      {"value": "row-reverse", "label": "row reverse"},
      {"value": "column-reverse","label": "column reverse"}
    ]
  },

  {
    "type": "select",
    "label": "align item",
    "id": "align-item",
    "options": [
      {"value": "center", "label": "center"},
      {"value": "flex-start", "label": "flex start"},
      {"value": "flex-end", "label": "flex end"},
      {"value": "stretch", "label": "stretch"},
      {"value": "baseline", "label": "baseline"}
    ]
  },

  {
    "type": "range",
    "label": "gap",
    "id": "content-gap",
    "min": 20,
    "max": 80,
    "step": 4,
    "default": 20,
  },

  {
    "type": "select",
    "label": "justify content",
    "id": "flex-justify",

    "options": [
      {"value": "space-between", "label": "space-between"},
      {"value": "space-around", "label": "space-arround"},
      {"value": "center", "label": "center"},
      {"value": "space-evenly", "label": "space-evenly"},
      {"value": "flex-start", "label": "flex-start"},
      {"value": "flex-end", "label": "flex-end"}
    ]
  },

  {
    "type": "select",
    "label": "flex Direction mobile",
    "id": "flex-direction__mbl",

    "options": [
      {"value": "row", "label": "row"},
      {"value": "column", "label": "column"},
      {"value": "row-reverse", "label": "row reverse"},
      {"value": "column-reverse","label": "column reverse"}
    ]
   },
 ],

  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "block_text",
          "label": "Block Text",
          "default": "This is a block text"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Image with Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}